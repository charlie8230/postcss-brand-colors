{
  "name": "postcss-brand-colors",
  "version": "1.0.0",
  "description": "PostCSS plugin to insert branding colors of all the major companies",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "branding",
    "brand colors",
    "brand-colors",
    "colors"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/postcss/postcss-brand-colors.git"
  },
  "dependencies": {
    "brand-colors": "^1.2.1",
    "postcss": "^6.0.1"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^20.0.0",
    "lint-staged": "^3.4.1",
    "pre-commit": "^1.2.2"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "test": "jest --coverage && eslint *.js"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss/es5",
    "env": {
      "jest": true
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
